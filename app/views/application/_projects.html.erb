<% if @projects.empty? %>
  No projects
<% else %>
  <% @projects.each do |project| %>
    <a class="project-link" rel="project" href="assets/project/<%= project.title %>/full.jpg" title="<%= project.description %>">
      <div class="project-wrapper">
        <%= project.title %>
        <%= project.order_index %>
        <%= image_tag "assets/project/#{project.title}/thumb.jpg" %>
      </div>
    </a>
  <% end %>
<% end %>
<script>
  $(document).ready(function() {

  	/* Apply fancybox to multiple items */
	
  	$("a.project-link").fancybox({
  		'transitionIn'	:	'elastic',
  		'transitionOut'	:	'elastic',
  		'speedIn'		:	600, 
  		'speedOut'		:	200, 
  		'overlayShow'	:	true,
  		'titlePosition' : 'inside',
  		'hideOnOverlayClick' : true,
  		'overlayOpacity' : 0.6,
  		'overlayColor' : '#000'
  	});
	
  });
</script>